<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<title>Perfil de Usuario</title>
		<link rel="stylesheet" href="/css/style.css" />
	</head>
	<body>
		<h1>Mi Perfil</h1>
		<form action="/users/profile?_method=PUT" method="POST">
			<div>
				<label for="first_name">Nombre:</label>
				<input
					type="text"
					id="first_name"
					name="first_name"
					value="{{user.first_name}}"
					required
				/>
			</div>
			<div>
				<label for="last_name">Apellido:</label>
				<input
					type="text"
					id="last_name"
					name="last_name"
					value="{{user.last_name}}"
					required
				/>
			</div>
			<div>
				<label for="email">Email:</label>
				<input
					type="email"
					id="email"
					name="email"
					value="{{user.email}}"
					required
				/>
			</div>
			<div>
				<label for="phone">Teléfono:</label>
				<input
					type="text"
					id="phone"
					name="phone"
					value="{{user.phone}}"
					required
				/>
			</div>
			<div>
				<label for="age">Edad:</label>
				<input
					type="number"
					id="age"
					name="age"
					value="{{user.age}}"
					required
				/>
			</div>
			<button type="submit">Actualizar Perfil</button>
		</form>

		<hr />

		<form
			action="/users/profile?_method=DELETE"
			method="POST"
			onsubmit="return confirm('¿Estás seguro de querer eliminar tu cuenta? Esta acción no se puede deshacer');"
		>
			<button type="submit">Eliminar Cuenta</button>
		</form>
	</body>
</html>